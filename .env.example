# APIC Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=APIC
DEBUG=false
# Environment: development, staging, production
ENVIRONMENT=production

# =============================================================================
# LLM Configuration
# =============================================================================
# Choose your preferred provider: "openai", "anthropic", or "google"
# Default is "google" (Gemini) - most cost-effective option
DEFAULT_LLM_PROVIDER=google

# OpenAI Configuration
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic Configuration
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Configuration (Recommended - Default Provider)
# Get API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-flash

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# =============================================================================
# ChromaDB Vector Database (Free & Open Source)
# =============================================================================
# No API keys required! Data stored locally.
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=apic-knowledge

# =============================================================================
# PostgreSQL Database
# =============================================================================
# For local development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/apic

# For Docker (used in docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=apic
POSTGRES_PORT=5433

# =============================================================================
# File Upload Settings
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# =============================================================================
# Report Generation
# =============================================================================
REPORTS_DIR=./reports

# =============================================================================
# Interview Scripts Storage
# =============================================================================
SCRIPTS_DIR=./scripts

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
# Number of uvicorn workers (production only)
API_WORKERS=4

# CORS Origins (comma-separated list)
# For production, specify exact origins (e.g., https://yourdomain.com)
# For development, this defaults to localhost URLs
CORS_ORIGINS=http://localhost:8501,http://localhost:8502

# =============================================================================
# Streamlit Configuration
# =============================================================================
STREAMLIT_PORT=8501
